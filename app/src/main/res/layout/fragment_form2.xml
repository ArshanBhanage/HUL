<!--                android:textColor="#444050"-->
<!--                android:textFontWeight="700"-->
<!--                android:textSize="15sp"-->
<!--                android:textStyle="bold" />-->
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>