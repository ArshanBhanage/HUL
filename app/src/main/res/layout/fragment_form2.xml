<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.hul.curriculam.ui.form2Details.Form2ViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f9fa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:paddingBottom="56dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="16dp"
            android:background="@color/white"
            app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="28dp"
                android:text="@string/disce_code"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="28dp"
                android:text='@{viewModel.uDiceCode}'
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:layout_marginTop="24dp"
                android:text="@string/school_name"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="28dp"
                android:text='@{viewModel.selectedSchoolCode.location_name}'
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:layout_marginTop="24dp"
                android:text="@string/form1"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="28dp"
                android:text='@{viewModel.visitDataToView.name_of_the_school_representative_who_collected_the_books.value}'
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:layout_marginTop="24dp"
                android:text="@string/form2"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="28dp"
                android:text='@{viewModel.visitDataToView.mobile_number_of_the_school_representative_who_collected_the_books.value}'
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:layout_marginTop="24dp"
                android:text="@string/form6"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="28dp"
                android:text="@{viewModel.visitDataToView.curriculum_on_track.value}"
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:layout_marginTop="24dp"
                android:text="@string/remarks"
                android:textColor="#6d6b77"
                android:textFontWeight="400"
                android:textSize="13sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/public_sans"
                android:lineHeight="28dp"
                android:text='@{viewModel.visitDataToView.remark.value}'
                android:textColor="#444050"
                android:textFontWeight="700"
                android:textSize="15sp"
                android:textStyle="bold" />
