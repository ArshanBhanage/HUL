                        <!--                        <androidx.recyclerview.widget.RecyclerView-->
                        <!--                            android:id="@+id/visitedLocation"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="match_parent"-->
                        <!--                            android:layout_marginTop="24dp"-->
                        <!--                            tools:itemCount="5"-->
                        <!--                            tools:listitem="@layout/location_view_design" />-->
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/white"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:id="@+id/myPerformance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/cal1"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@mipmap/refresh"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@+id/cal1"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/public_sans"
                                    android:maxLines="1"
                                    android:text="My Performance"
                                    android:textColor="#2F2B3D"
                                    android:textFontWeight="700"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toStartOf="@+id/tillDateDropdown"
                                    app:layout_constraintStart_toEndOf="@+id/cal1"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/tillDateDropdown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="right"
                                    android:backgroundTint="#dde0f6"
                                    android:fontFamily="@font/publicsans"
                                    android:text="Till Date"
                                    android:textAllCaps="false"
                                    android:textColor="#2C41CA"
                                    android:textFontWeight="700"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    app:cornerRadius="8dp"
                                    app:icon="@mipmap/dropdownarrow"
                                    app:iconTint="#2C41CA"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
