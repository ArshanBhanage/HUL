                        <!--                            <AutoCompleteTextView-->
                        <!--                                android:layout_width="match_parent"-->
                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                android:textColor="@color/green" />-->

                        <!--                        </com.google.android.material.textfield.TextInputLayout>-->

                        <!--                        <TextView-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
